<% layout('./layout/layout') %>

<h1 class="text-2xl w-3/4 mx-auto font-bold my-6 mx-4">Book Search</h1>
<form class="w-3/4 mx-auto" action="/books/search" method="GET"> <!-- Use GET method -->
    <input class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" type="text" name="name" required placeholder="Enter Book Name">
    <button type="submit" class="m-4 bg-black text-white p-2 hover:bg-white hover:text-black hover:border hover:border-black rounded-xl">Submit</button>
</form>

<div id="results" class="w-3/4 mx-auto my-4">
    <% if (books && books.length > 0) { %>
    <% if (books && books.length > 0) { %>
        <h2 class="text-xl font-bold">Search Results:</h2>
        <ul>
            <% books.forEach(book => { %>
                <li>
                    <strong><%= book.bookName %></strong> - <%= book.category %> - $<%= book.rentPerDay %>/day
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No books found.</p>
    <% } %>
    <% } %>
</div>
