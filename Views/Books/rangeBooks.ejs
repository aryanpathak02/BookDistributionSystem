


<% layout('./layout/layout') %>
<div class="w-1/2 mx-auto p-4"
>
<h1 class="text-2xl  mx-auto font-bold my-6 mx-4" >Search by Range</h1>

<form action="/books/rent" method="GET">
    <div>
    <label for="min">Min range</label>
    <input id="min" class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" type="number" name="min"  placeholder="enter min range " required>
    </div>
    <div>
    <label for="max">Max range</label>

    <input class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" type="number" id="max" name="max"  placeholder="enter max range " required>
</div>
    <button class="m-4 bg-black text-white p-2 hover:bg-white hover:text-black hover:border hover:border-black rounded-xl">Submit</button>
</form>
<% if (books && books.length > 0) { %>
    <% if (books && books.length > 0) { %>
        <h2 class="text-xl font-bold my-2">Search Results:</h2>
        <ul>
            <% books.forEach(book => { %>
                <li>
                    <strong><%= book.bookName %></strong> - <%= book.category %> - $<%= book.rentPerDay %>/day
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No books found.</p>
    <% } %>
    <% } %>

</div>