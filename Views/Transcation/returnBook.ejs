<% layout('./layout/layout') %>

  <div class="w-full sm:w-1/2 mx-auto py-6">
  <h1 class="text-2xl font-bold mb-4">Issue a Book </h1>
  <form action="/transaction/return" method="POST">
    <label for="bookName">Book Name:</label>
    <select class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" name="bookName" id="bookName">
      <% for (let book of books) { %>
        <option value="<%= book.bookName %>">
          <%= book.bookName %>
        </option>
        <% } %>
    </select>

    <label for="userId">User ID:</label>
    <select class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" name="userId" id="userId">
      <% for (let user of users) { %>
        <option value="<%= user.id %>">
          <%= user.username %>
        </option>
        <% } %>
    </select>

    <label for="returnDate">Return Date:</label>
    <input class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" type="date" id="returnDate" name="returnDate" required>

    <button class="m-4 bg-black text-white p-2 hover:bg-white hover:text-black hover:border hover:border-black rounded-xl" type="submit">Issue Book</button>
  </form>
  </div>