<% layout('./layout/layout') %>
<div class="w-full sm:w-1/2 mx-auto p-4">
    <h1 class="font-bold text-2xl mb-4">Book availablilty</h1>
<!-- Form to search for a book -->
<form action="/transaction/books" method="GET">
    <label for="bookname">Book name</label>

      <input type="text"  class="bg-zinc-100 rounded-xl pl-4 p-2 w-full" placeholder="Enter Book name" required>
    <input  class="m-4 bg-black text-white p-2 hover:bg-white hover:text-black hover:border hover:border-black rounded-xl" type="submit" value="Search">
</form>

<!-- Display Book Details if available -->
<% if (bookName) { %>
    <h1>Details for <%= bookName %></h1>

    <h2>Transactions</h2>
    <p>Total transactions: <%= totalCount %></p>
    <p>Currently issued to: <%= currentlyIssuedTo %></p>

    <h3>Transaction History</h3>
    <ul>
        <% history.forEach(function(user) { %>
            <li><%= user %></li>
        <% }) %>
    </ul>
<% } else { %>
    <p>Please enter a book name to view details.</p>
<% } %>
</div>